
@model HalApplicationBuilder.Runtime.AspNetMvc.MultiView.Model<HalApplicationBuilderSampleMvc.Models.会社__SearchCondition, HalApplicationBuilderSampleMvc.Models.会社__SearchResult>;
@{
    ViewData["Title"] = "会社";
}

<h1>
    会社
</h1>

<form>
    @* 検索条件欄 *@
    <div>
        
<div class="container">
    <div class="form-horizontal">
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">
                会社ID
            </label>
            <div class="col-sm-10">
                
<input asp-for="SearchCondition.会社ID" />



            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">
                会社名
            </label>
            <div class="col-sm-10">
                
<input asp-for="SearchCondition.会社名" />



            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">
                連絡先
            </label>
            <div class="col-sm-10">
                
<div class="container">
    <div class="form-horizontal">
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">
                電話番号
            </label>
            <div class="col-sm-10">
                
<input asp-for="SearchCondition.連絡先.電話番号" />



            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">
                郵便番号
            </label>
            <div class="col-sm-10">
                
<input asp-for="SearchCondition.連絡先.郵便番号" />



            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">
                住所1
            </label>
            <div class="col-sm-10">
                
<input asp-for="SearchCondition.連絡先.住所1" />



            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">
                住所2
            </label>
            <div class="col-sm-10">
                
<input asp-for="SearchCondition.連絡先.住所2" />



            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">
                住所3
            </label>
            <div class="col-sm-10">
                
<input asp-for="SearchCondition.連絡先.住所3" />



            </div>
        </div>
    </div>
</div>

            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">
                資本情報
            </label>
            <div class="col-sm-10">
                
<label>
    <input type="checkbox" asp-for="SearchCondition.資本情報_上場企業資本情報" />
    資本情報_上場企業資本情報
</label>


<label>
    <input type="checkbox" asp-for="SearchCondition.資本情報_非上場企業資本情報" />
    資本情報_非上場企業資本情報
</label>

            </div>
        </div>
    </div>
</div>

        <button asp-action="Clear">クリア</button>
        <button asp-action="Search">検索</button>
    </div>
    
    @* 検索結果欄 *@
    <div>
        <div style="display: flex; justify-content: flex-end">
            <a asp-action="New">新規作成</a>
        </div>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        会社ID
                    </th>
                    <th>
                        会社名
                    </th>
                    <th>
                        電話番号
                    </th>
                    <th>
                        郵便番号
                    </th>
                    <th>
                        住所1
                    </th>
                    <th>
                        住所2
                    </th>
                    <th>
                        住所3
                    </th>
                    <th>
                        資本情報
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.SearchResult.Count; i++)
                {
                    <tr>
                        <td>
                            <a asp-action="Detail">詳細</a>
                        </td>
                        <td>
                            @Model.SearchResult[i].会社ID
                        </td>
                        <td>
                            @Model.SearchResult[i].会社名
                        </td>
                        <td>
                            @Model.SearchResult[i].電話番号
                        </td>
                        <td>
                            @Model.SearchResult[i].郵便番号
                        </td>
                        <td>
                            @Model.SearchResult[i].住所1
                        </td>
                        <td>
                            @Model.SearchResult[i].住所2
                        </td>
                        <td>
                            @Model.SearchResult[i].住所3
                        </td>
                        <td>
                            @Model.SearchResult[i].資本情報
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>

