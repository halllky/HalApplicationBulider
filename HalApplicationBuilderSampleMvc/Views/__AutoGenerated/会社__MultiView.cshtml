
@model HalApplicationBuilder.AspNetMvc.MultiView.Model<HalApplicationBuilderSampleMvc.Models.会社__SearchCondition, HalApplicationBuilderSampleMvc.Models.会社__SearchResult>;
@{
    ViewData["Title"] = "会社";
}

<div class="flex gap-3 items-center">
    <h1 class="font-bold text-[18px] select-none">
        会社
    </h1>
    <a asp-action="New" class="halapp-btn-link">新規作成</a>
</div>

<form>
    @* 検索条件欄 *@
    <div class="mt-2">
        
<div class="border border-gray-300 rounded-lg flex flex-col p-2">
    <div class="flex flex-col md:flex-row mb-1">
        <label class="w-32 select-none">
            会社ID
        </label>
        <div class="flex-1">
            
<input asp-for="SearchCondition.会社ID" />



        </div>
    </div>
    <div class="flex flex-col md:flex-row mb-1">
        <label class="w-32 select-none">
            会社名
        </label>
        <div class="flex-1">
            
<input asp-for="SearchCondition.会社名" />



        </div>
    </div>
    <div class="flex flex-col md:flex-row mb-1">
        <label class="w-32 select-none">
            連絡先
        </label>
        <div class="flex-1">
            
<div class="border border-gray-300 rounded-lg flex flex-col p-2">
    <div class="flex flex-col md:flex-row mb-1">
        <label class="w-32 select-none">
            電話番号
        </label>
        <div class="flex-1">
            
<input asp-for="SearchCondition.連絡先.電話番号" />



        </div>
    </div>
    <div class="flex flex-col md:flex-row mb-1">
        <label class="w-32 select-none">
            郵便番号
        </label>
        <div class="flex-1">
            
<input asp-for="SearchCondition.連絡先.郵便番号" />



        </div>
    </div>
    <div class="flex flex-col md:flex-row mb-1">
        <label class="w-32 select-none">
            住所1
        </label>
        <div class="flex-1">
            
<input asp-for="SearchCondition.連絡先.住所1" />



        </div>
    </div>
    <div class="flex flex-col md:flex-row mb-1">
        <label class="w-32 select-none">
            住所2
        </label>
        <div class="flex-1">
            
<input asp-for="SearchCondition.連絡先.住所2" />



        </div>
    </div>
    <div class="flex flex-col md:flex-row mb-1">
        <label class="w-32 select-none">
            住所3
        </label>
        <div class="flex-1">
            
<input asp-for="SearchCondition.連絡先.住所3" />



        </div>
    </div>
</div>

        </div>
    </div>
    <div class="flex flex-col md:flex-row mb-1">
        <label class="w-32 select-none">
            資本情報
        </label>
        <div class="flex-1">
            
<label>
    <input type="checkbox" asp-for="SearchCondition.資本情報_上場企業資本情報" />
    資本情報_上場企業資本情報
</label>


<label>
    <input type="checkbox" asp-for="SearchCondition.資本情報_非上場企業資本情報" />
    資本情報_非上場企業資本情報
</label>

        </div>
    </div>
    <div class="flex flex-col md:flex-row mb-1">
        <label class="w-32 select-none">
            営業所
        </label>
        <div class="flex-1">
            
        </div>
    </div>
</div>

        <button asp-action="Search" class="halapp-btn-primary">検索</button>
        <button asp-action="Clear" class="halapp-btn-secondary">クリア</button>
    </div>
    
    @* 検索結果欄 *@
    <div class="mt-2">
        <div style="display: flex; justify-content: flex-end">
        </div>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        会社ID
                    </th>
                    <th>
                        会社名
                    </th>
                    <th>
                        電話番号
                    </th>
                    <th>
                        郵便番号
                    </th>
                    <th>
                        住所1
                    </th>
                    <th>
                        住所2
                    </th>
                    <th>
                        住所3
                    </th>
                    <th>
                        資本情報
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.SearchResult.Count; i++)
                {
                    <tr>
                        <td>
                            <a asp-action="Detail"
                               asp-route-id="@Model.SearchResult[i].__halapp__InstanceKey"
                               class="halapp-btn-link">
                                詳細
                            </a>
                        </td>
                        <td>
                            @Model.SearchResult[i].会社ID
                        </td>
                        <td>
                            @Model.SearchResult[i].会社名
                        </td>
                        <td>
                            @Model.SearchResult[i].電話番号
                        </td>
                        <td>
                            @Model.SearchResult[i].郵便番号
                        </td>
                        <td>
                            @Model.SearchResult[i].住所1
                        </td>
                        <td>
                            @Model.SearchResult[i].住所2
                        </td>
                        <td>
                            @Model.SearchResult[i].住所3
                        </td>
                        <td>
                            @Model.SearchResult[i].資本情報
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>

