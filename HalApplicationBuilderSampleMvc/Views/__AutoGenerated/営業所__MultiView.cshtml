
@model HalApplicationBuilder.Runtime.AspNetMvc.MultiView.Model<HalApplicationBuilderSampleMvc.Models.営業所__SearchCondition, HalApplicationBuilderSampleMvc.Models.営業所__SearchResult>;
@{
    ViewData["Title"] = "営業所";
}

<h1>
    営業所
</h1>

<form>
    
    @* 検索条件欄 *@
    <div class="container">
        <div class="form-horizontal">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    営業所ID
                </label>
                <div class="col-sm-10">
                    
<input asp-for="SearchCondition.営業所ID" />



                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    営業所名
                </label>
                <div class="col-sm-10">
                    
<input asp-for="SearchCondition.営業所名" />



                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    運用開始日
                </label>
                <div class="col-sm-10">
                    

<input asp-for="SearchCondition.運用開始日.From" />
〜
<input asp-for="SearchCondition.運用開始日.To" />


                </div>
            </div>
        </div>

        <button asp-action="Clear">クリア</button>
        <button asp-action="Search">検索</button>
    </div>
    
    @* 検索結果欄 *@
    <div>
        <div style="display: flex; justify-content: flex-end">
            <a asp-action="Create">新規作成</a>
        </div>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        営業所ID
                    </th>
                    <th>
                        営業所名
                    </th>
                    <th>
                        運用開始日
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.SearchResult.Count; i++)
                {
                    <tr>
                        <td>
                            <a asp-action="Detail">詳細</a>
                        </td>
                        <td>
                            @Model.SearchResult[i].営業所ID
                        </td>
                        <td>
                            @Model.SearchResult[i].営業所名
                        </td>
                        <td>
                            @Model.SearchResult[i].運用開始日
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>

