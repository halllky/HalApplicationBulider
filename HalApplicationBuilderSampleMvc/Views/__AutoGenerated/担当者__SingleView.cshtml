
@model HalApplicationBuilder.AspNetMvc.SingleView.Model<HalApplicationBuilderSampleMvc.Models.担当者>;
@{
    ViewData["Title"] = $"{@Model.InstanceName}";
}

<h1>
    @Model.InstanceName
    <asp type="hidden" asp-for="InstanceName" />
</h1>

<form>
    
<div class="container">
    <div class="form-horizontal">
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">
                ユーザーID
            </label>
            <div class="col-sm-10">
                <input asp-for="Item.ユーザーID"/>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">
                氏名
            </label>
            <div class="col-sm-10">
                <input asp-for="Item.氏名"/>
            </div>
        </div>
    </div>
</div>

    <button asp-action="Update" formmethod="post">更新</button>
    <button asp-action="Delete" formmethod="post">削除</button>
</form>
