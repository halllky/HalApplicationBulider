
@model HalApplicationBuilder.AspNetMvc.MultiView.Model<HalApplicationBuilderSampleMvc.Models.担当者__SearchCondition, HalApplicationBuilderSampleMvc.Models.担当者__SearchResult>;
@{
    ViewData["Title"] = "担当者";
}

<h1>
    担当者
</h1>

<form>
    @* 検索条件欄 *@
    <div>
        
<div class="container">
    <div class="form-horizontal">
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">
                ユーザーID
            </label>
            <div class="col-sm-10">
                
<input asp-for="SearchCondition.ユーザーID" />



            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">
                氏名
            </label>
            <div class="col-sm-10">
                
<input asp-for="SearchCondition.氏名" />



            </div>
        </div>
    </div>
</div>

        <button asp-action="Clear">クリア</button>
        <button asp-action="Search">検索</button>
    </div>
    
    @* 検索結果欄 *@
    <div>
        <div style="display: flex; justify-content: flex-end">
            <a asp-action="New">新規作成</a>
        </div>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        ユーザーID
                    </th>
                    <th>
                        氏名
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.SearchResult.Count; i++)
                {
                    <tr>
                        <td>
                            <a asp-action="Detail">詳細</a>
                        </td>
                        <td>
                            @Model.SearchResult[i].ユーザーID
                        </td>
                        <td>
                            @Model.SearchResult[i].氏名
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>

