@inject HalApplicationBuilder.Runtime.RuntimeContext runtimeContext; 

<!DOCTYPE html>
<html lang="ja" class="h-full w-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HalApplicationBuilder</title>
    <link rel="stylesheet" href="~/css/app.min.css" />
</head>
<body class="bg-gray-200 h-full w-full flex flex-col">

    @*ルートナビゲーション*@
    <nav class="flex gap-3 mx-2 justify-start items-center border-b border-gray-400">
        <h1 class="font-bold text-[24px]">
            <a href="/">@runtimeContext.ApplicationName</a>
        </h1>

        @foreach (var menuItem in runtimeContext.GetRootNavigations())
        {
            <div class="flex items-center cursor-pointer">
                <a asp-area=""
                   asp-controller="@menuItem.AspController"
                   asp-action="Index"
                   class="halapp-btn-link">
                    @menuItem.LinkText
                </a>
            </div>
        }
    </nav>

    <main role="main" class="flex-1 mx-2">
        @RenderBody()
    </main>

    <footer class="mx-2">
        &copy; 2022 - HalApplicationBuilder
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <partial name="@("~/Views/__AutoGenerated/" + HalApplicationBuilder.AspNetMvc.JsTemplate.FILE_NAME)" />
</body>
</html>
