# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.tt]
end_of_line = crlf

[*.cs]
end_of_line = crlf
brace_style = end_of_line
indent_size = 4

[*.{ts,tsx}]
end_of_line = lf
brace_style = end_of_line
indent_size = 2
