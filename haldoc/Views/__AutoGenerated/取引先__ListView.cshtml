
@model haldoc.Runtime.ListViewModel<
    haldoc.AutoGenerated.Mvc.取引先__SearchCondition,
    haldoc.AutoGenerated.Mvc.取引先__ListItem>;
@{
    ViewData["Title"] = "取引先";
}

<h1>
    取引先
</h1>

<form>
    
    @* 検索条件欄 *@
    <div class="container">
        <div class="form-horizontal">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    企業ID
                </label>
                <div class="col-sm-10">
                    <input asp-for="Filter.企業ID" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    企業名
                </label>
                <div class="col-sm-10">
                    <input asp-for="Filter.企業名" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    重要度
                </label>
                <div class="col-sm-10">
                    <select asp-for="Filter.重要度" asp-items="@Html.GetEnumSelectList(typeof(haldoc.E_重要度))">
                        <option selected="selected" value=""></option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    資本情報
                </label>
                <div class="col-sm-10">
                    <div>
                        <label>
                            <input type="checkbox" asp-for="Filter.資本情報_上場企業資本情報" />
                           上場企業資本情報
                        </label>
                        <label>
                            <input type="checkbox" asp-for="Filter.資本情報_非上場企業資本情報" />
                           非上場企業資本情報
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <button asp-action="ClearSearchCondition">クリア</button>
        <button asp-action="ExecuteSearch">検索</button>
    </div>
    
    @* 検索結果欄 *@
    <div>
        <div style="display: flex; justify-content: flex-end">
            <a asp-action="Create">新規作成</a>
        </div>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        企業ID
                    </th>
                    <th>
                        企業名
                    </th>
                    <th>
                        重要度
                    </th>
                    <th>
                        資本情報
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    <tr>
                        <td>
                            <a asp-action="Single" asp-route-aggregateId="7ed42285-e3b1-30ef-ae7b-68bfe07ca897">詳細</a>
                        </td>
                        <td>
                            @Model.Items[i].企業ID
                        </td>
                        <td>
                            @Model.Items[i].企業名
                        </td>
                        <td>
                            @Model.Items[i].重要度
                        </td>
                        <td>
                            @Model.Items[i].資本情報
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
