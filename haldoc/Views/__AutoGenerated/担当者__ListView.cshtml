
@model haldoc.Runtime.ListViewModel<
    haldoc.AutoGenerated.Mvc.担当者__SearchCondition,
    haldoc.AutoGenerated.Mvc.担当者__ListItem>;
@{
    ViewData["Title"] = "担当者";
}

<h1>
    担当者
</h1>

<form>
    
    @* 検索条件欄 *@
    <div class="container">
        <div class="form-horizontal">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    ユーザーID
                </label>
                <div class="col-sm-10">
                    <input asp-for="Filter.ユーザーID" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    氏名
                </label>
                <div class="col-sm-10">
                    <input asp-for="Filter.氏名" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    所属
                </label>
                <div class="col-sm-10">
                    <select asp-for="Filter.所属">
                        <option selected="selected" value=""></option>
                    </select>
                </div>
            </div>
        </div>

        <button asp-action="ClearSearchCondition">クリア</button>
        <button asp-action="ExecuteSearch">検索</button>
    </div>
    
    @* 検索結果欄 *@
    <div>
        <div style="display: flex; justify-content: flex-end">
            <a asp-action="Create">新規作成</a>
        </div>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        ユーザーID
                    </th>
                    <th>
                        氏名
                    </th>
                    <th>
                        所属
                    </th>
                    <th>
                        所属__ID
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    <tr>
                        <td>
                            <a asp-action="Single" asp-route-aggregateId="81d221ca-17f4-3a21-8b77-efa2e9e4869c">詳細</a>
                        </td>
                        <td>
                            @Model.Items[i].ユーザーID
                        </td>
                        <td>
                            @Model.Items[i].氏名
                        </td>
                        <td>
                            @Model.Items[i].所属
                        </td>
                        <td>
                            @Model.Items[i].所属__ID
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
