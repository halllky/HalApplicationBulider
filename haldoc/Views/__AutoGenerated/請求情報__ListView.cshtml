
@model haldoc.Runtime.ListViewModel<
    haldoc.AutoGenerated.Mvc.請求情報__SearchCondition,
    haldoc.AutoGenerated.Mvc.請求情報__ListItem>;
@{
    ViewData["Title"] = "請求情報";
}

<h1>
    請求情報
</h1>

<form>
    
    @* 検索条件欄 *@
    <div class="container">
        <div class="form-horizontal">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    取引先
                </label>
                <div class="col-sm-10">
                    <select asp-for="Filter.取引先">
                        <option selected="selected" value=""></option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    宛名
                </label>
                <div class="col-sm-10">
                    <input asp-for="Filter.宛名" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    住所
                </label>
                <div class="col-sm-10">
                    
                    <div class="container">
                        <div class="form-horizontal">
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    郵便番号
                                </label>
                                <div class="col-sm-10">
                                    <input asp-for="Filter.郵便番号" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    都道府県
                                </label>
                                <div class="col-sm-10">
                                    <input asp-for="Filter.都道府県" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    市町村
                                </label>
                                <div class="col-sm-10">
                                    <input asp-for="Filter.市町村" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    丁番地
                                </label>
                                <div class="col-sm-10">
                                    <input asp-for="Filter.丁番地" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <button asp-action="ClearSearchCondition">クリア</button>
        <button asp-action="ExecuteSearch">検索</button>
    </div>
    
    @* 検索結果欄 *@
    <div>
        <div style="display: flex; justify-content: flex-end">
            <a asp-action="Create">新規作成</a>
        </div>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        取引先
                    </th>
                    <th>
                        取引先__ID
                    </th>
                    <th>
                        宛名
                    </th>
                    <th>
                        郵便番号
                    </th>
                    <th>
                        都道府県
                    </th>
                    <th>
                        市町村
                    </th>
                    <th>
                        丁番地
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    <tr>
                        <td>
                            <a asp-action="Single" asp-route-aggregateId="3f2673ac-faea-377b-8ed3-61d0fbca6410">詳細</a>
                        </td>
                        <td>
                            @Model.Items[i].取引先
                        </td>
                        <td>
                            @Model.Items[i].取引先__ID
                        </td>
                        <td>
                            @Model.Items[i].宛名
                        </td>
                        <td>
                            @Model.Items[i].郵便番号
                        </td>
                        <td>
                            @Model.Items[i].都道府県
                        </td>
                        <td>
                            @Model.Items[i].市町村
                        </td>
                        <td>
                            @Model.Items[i].丁番地
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
