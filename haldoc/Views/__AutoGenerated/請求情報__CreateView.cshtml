@model haldoc.Runtime.SingleViewModel<
    haldoc.AutoGenerated.Mvc.請求情報>;
@{
    ViewData["Title"] = "請求情報 - 新規作成";
}

<h1>
    請求情報 - 新規作成
</h1>

<form>
    <input type="hidden" asp-for="AggregateId" />

    
    <div class="container">
        <div class="form-horizontal">
    
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    取引先
                </label>
                <div class="col-sm-10">
                    <select asp-for="Instance.取引先">
                        <option selected="selected" value=""></option>
                    </select>
                </div>
            </div>
    <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    宛名
                </label>
                <div class="col-sm-10">
                    <input asp-for="Instance.宛名" />
                </div>
            </div>
    
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    住所
                </label>
                <div class="col-sm-10">
                    
                        <div class="container">
                            <div class="form-horizontal">
                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">
                                                郵便番号
                                            </label>
                                            <div class="col-sm-10">
                                                <input asp-for="Instance.住所.郵便番号" />
                                            </div>
                                        </div>
                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">
                                                都道府県
                                            </label>
                                            <div class="col-sm-10">
                                                <input asp-for="Instance.住所.都道府県" />
                                            </div>
                                        </div>
                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">
                                                市町村
                                            </label>
                                            <div class="col-sm-10">
                                                <input asp-for="Instance.住所.市町村" />
                                            </div>
                                        </div>
                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">
                                                丁番地
                                            </label>
                                            <div class="col-sm-10">
                                                <input asp-for="Instance.住所.丁番地" />
                                            </div>
                                        </div>
                            </div>
                        </div>
                        
                </div>
            </div>
        </div>
    </div>
    
    
    <button asp-action="SaveNewInstance" formmethod="post">作成</button>
</form>