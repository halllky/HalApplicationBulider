
@model haldoc.Runtime.ListViewModel<
    haldoc.AutoGenerated.Mvc.取引先支店__SearchCondition,
    haldoc.AutoGenerated.Mvc.取引先支店__ListItem>;
@{
    ViewData["Title"] = "取引先支店";
}

<h1>
    取引先支店
</h1>

<form>
    
    @* 検索条件欄 *@
    <div class="container">
        <div class="form-horizontal">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    会社
                </label>
                <div class="col-sm-10">
                    <select asp-for="Filter.会社">
                        <option selected="selected" value=""></option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    支店連番
                </label>
                <div class="col-sm-10">
                    <div>
                        <input asp-for="Filter.支店連番.From" />
                         〜 
                        <input asp-for="Filter.支店連番.To" />
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    支店名
                </label>
                <div class="col-sm-10">
                    <input asp-for="Filter.支店名" />
                </div>
            </div>
        </div>

        <button asp-action="ClearSearchCondition">クリア</button>
        <button asp-action="ExecuteSearch">検索</button>
    </div>
    
    @* 検索結果欄 *@
    <div>
        <div style="display: flex; justify-content: flex-end">
            <a asp-controller="Haldoc" asp-action="Create" asp-route-aggregateId="d52ffc4e-aa2c-3ac0-b9a4-6f03e8fb599c">新規作成</a>
        </div>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        会社
                    </th>
                    <th>
                        会社__ID
                    </th>
                    <th>
                        支店連番
                    </th>
                    <th>
                        支店名
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    <tr>
                        <td>
                            <a asp-controller="Haldoc" asp-action="Single" asp-route-aggregateId="d52ffc4e-aa2c-3ac0-b9a4-6f03e8fb599c">詳細</a>
                        </td>
                        <td>
                            @Model.Items[i].会社
                        </td>
                        <td>
                            @Model.Items[i].会社__ID
                        </td>
                        <td>
                            @Model.Items[i].支店連番
                        </td>
                        <td>
                            @Model.Items[i].支店名
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
