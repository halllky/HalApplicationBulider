
@model haldoc.Runtime.ListViewModel<
    haldoc.AutoGenerated.Mvc.営業所__SearchCondition,
    haldoc.AutoGenerated.Mvc.営業所__ListItem>;
@{
    ViewData["Title"] = "営業所";
}

<h1>
    営業所
</h1>

<form>
    
    @* 検索条件欄 *@
    <div class="container">
        <div class="form-horizontal">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    営業所ID
                </label>
                <div class="col-sm-10">
                    <input asp-for="Filter.営業所ID" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    営業所名
                </label>
                <div class="col-sm-10">
                    <input asp-for="Filter.営業所名" />
                </div>
            </div>
        </div>

        <button asp-action="ClearSearchCondition">クリア</button>
        <button asp-action="ExecuteSearch">検索</button>
    </div>
    
    @* 検索結果欄 *@
    <div>
        <div style="display: flex; justify-content: flex-end">
            <a asp-controller="Haldoc" asp-action="Create" asp-route-aggregateId="b3660889-c8a1-3498-b55e-28ae656cd18e">新規作成</a>
        </div>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        営業所ID
                    </th>
                    <th>
                        営業所名
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    <tr>
                        <td>
                            <a asp-controller="Haldoc" asp-action="Single" asp-route-aggregateId="b3660889-c8a1-3498-b55e-28ae656cd18e">詳細</a>
                        </td>
                        <td>
                            @Model.Items[i].営業所ID
                        </td>
                        <td>
                            @Model.Items[i].営業所名
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
