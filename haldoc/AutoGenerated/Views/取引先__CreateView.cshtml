@model haldoc.AutoGenerated.Mvc.取引先;
@{
    ViewData["Title"] = "取引先 - 新規作成";
}

<h1>
    取引先 - 新規作成
</h1>

<form>
    
    <div class="container">
        <div class="form-horizontal">
    <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    企業ID
                </label>
                <div class="col-sm-10">
                    <input asp-for="企業ID" />
                </div>
            </div>
    <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    企業名
                </label>
                <div class="col-sm-10">
                    <input asp-for="企業名" />
                </div>
            </div>
    <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    重要度
                </label>
                <div class="col-sm-10">
                    <select asp-for="重要度" asp-items="@Html.GetEnumSelectList(typeof(haldoc.E_重要度))">
                        <option selected="selected" value=""></option>
                    </select>
                </div>
            </div>
    
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">
                    資本情報
                </label>
                <div class="col-sm-10" style="display: flex; flex-direction: column; align-items: flex-start">
                    <label>
                        <input type="radio" value="0" name="資本情報">
                        上場企業資本情報
                    </label>
                    
                        <div class="container">
                            <div class="form-horizontal">
                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">
                                                自己資本比率
                                            </label>
                                            <div class="col-sm-10">
                                                <input asp-for="資本情報.自己資本比率" />
                                            </div>
                                        </div>
                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">
                                                利益率
                                            </label>
                                            <div class="col-sm-10">
                                                <input asp-for="資本情報.利益率" />
                                            </div>
                                        </div>
                            </div>
                        </div>
                        
                    <label>
                        <input type="radio" value="1" name="資本情報">
                        非上場企業資本情報
                    </label>
                    
                        <div class="container">
                            <div class="form-horizontal">
                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">
                                                主要株主
                                            </label>
                                            <div class="col-sm-10">
                                                <input asp-for="資本情報.主要株主" />
                                            </div>
                                        </div>
                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">
                                                安定性
                                            </label>
                                            <div class="col-sm-10">
                                                <select asp-for="資本情報.安定性" asp-items="@Html.GetEnumSelectList(typeof(haldoc.E_安定性))">
                                                </select>
                                            </div>
                                        </div>
                            </div>
                        </div>
                        
                </div>
            </div>
    
            <div class="row mb-12" style="display: flex; flex-direction: column; align-items: flex-start">
                <label class="col-sm-2 col-form-label">
                    備考
                </label>
                @for (var i = 0; i < Model.備考.Count; i++) {
                    
                        <div class="container">
                            <div class="form-horizontal">
                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">
                                                Text
                                            </label>
                                            <div class="col-sm-10">
                                                <input asp-for="備考[i].Text" />
                                            </div>
                                        </div>
                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">
                                                At
                                            </label>
                                            <div class="col-sm-10">
                                                <input asp-for="備考[i].At" />
                                            </div>
                                        </div>
                        
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">
                                                By
                                            </label>
                                            <div class="col-sm-10">
                                                <select asp-for="備考[i].By">
                                                    <option selected="selected" value=""></option>
                                                </select>
                                            </div>
                                        </div>
                            </div>
                        </div>
                        
                }
            </div>
    
            <div class="row mb-12" style="display: flex; flex-direction: column; align-items: flex-start">
                <label class="col-sm-2 col-form-label">
                    担当者
                </label>
                @for (var i = 0; i < Model.担当者.Count; i++) {
                    
                        <div class="container">
                            <div class="form-horizontal">
                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">
                                                ユーザーID
                                            </label>
                                            <div class="col-sm-10">
                                                <input asp-for="担当者[i].ユーザーID" />
                                            </div>
                                        </div>
                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">
                                                氏名
                                            </label>
                                            <div class="col-sm-10">
                                                <input asp-for="担当者[i].氏名" />
                                            </div>
                                        </div>
                        
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">
                                                所属
                                            </label>
                                            <div class="col-sm-10">
                                                <select asp-for="担当者[i].所属">
                                                    <option selected="selected" value=""></option>
                                                </select>
                                            </div>
                                        </div>
                            </div>
                        </div>
                        
                }
            </div>
        </div>
    </div>
    
    
    <button asp-action="SaveNewInstance">作成</button>
</form>