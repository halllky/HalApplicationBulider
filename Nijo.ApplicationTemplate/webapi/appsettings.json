{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "NLog": {
    "throwConfigExceptions": true,
    "extensions": [
      { "assembly": "NLog.Extensions.Logging" },
      { "assembly": "NLog.Web.AspNetCore" },
      { "assembly": "NLog.Database" }
    ],
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "./log/${shortdate}_nlog.log",
        "layout": "${longdate},${level:uppercase=true}.${logger},${message:withexception=true},${event-properties:item=RequestBody}"
      },
      "logconsole": {
        "type": "Console"
      },
      "logdatabase": {
        "type": "Database",
        "connectionString": "Data Source=../DEBUG2.sqlite3;Pooling=False",
        "dbProvider": "Microsoft.Data.Sqlite.SqliteConnection, Microsoft.Data.Sqlite",
        "commandText": "INSERT INTO LogEntry (UUID, SessionKey, LogTimestamp, UserID, LogLevel, LogSummary, ClientUrl, ServerUrl, ResponseHttpStatusCode) VALUES (@uuid, @sessionkey, @logtimestamp, @userid, @loglevel, @logsummary, @clienturl, @serverurl, @responsehttpstatuscode)",
        "parameters": [
          {
            "name": "@uuid",
            "layout": "${guid}"
          },
          {
            "name": "@sessionkey",
            "layout": "${aspnet-sessionid}"
          },
          {
            "name": "@logtimestamp",
            "layout": "${longdate}"
          },
          {
            "name": "@userid",
            "layout": "${event-properties:item=UserId}"
          },
          {
            "name": "@loglevel",
            "layout": "${level}"
          },
          {
            "name": "@logsummary",
            "layout": "${message} "
          },
          {
            "name": "@clienturl",
            "layout": "${event-properties:item=ClientUrl}"
          },
          {
            "name": "@serverurl",
            "layout": "${event-properties:item=ServerUrl}"
          },
          {
            "name": "@responsehttpstatuscode",
            "layout": "${event-properties:item=ResponseStatusCode}"
          }
        ]
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile,logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logdatabase"
      }
    ]
  }
}
