@inject HalApplicationBuilder.ReArchTo関数型.HalApp.RuntimeService runtimeService;

<!DOCTYPE html>
<html lang="ja" class="h-full w-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HalApplicationBuilder</title>
    <link rel="stylesheet" href="~/css/app.min.css" />
</head>
<body class="h-full w-full flex flex-col">

    @*ルートナビゲーション*@
    <nav class="flex gap-3 mx-2 justify-start items-center border-b border-gray-400">
        <h1 class="font-bold text-[24px]">
            <a href="/">@runtimeService.ApplicationName</a>
        </h1>

        @foreach (var menuItem in runtimeService.GetRootNavigations())
        {
            <div class="flex items-center cursor-pointer">
                <a asp-area=""
                   asp-controller="@menuItem.AspController"
                   asp-action="Index"
                   class="halapp-btn-link">
                    @menuItem.LinkText
                </a>
            </div>
        }
    </nav>

    <main role="main" class="flex-1 m-2">
        @RenderBody()
    </main>

    <footer class="mx-2">
        &copy; 2022 - HalApplicationBuilder
    </footer>

    @* TODO: autocompleteの実験のためにCDNから読むよう変更している*@
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <partial name="@("~/Views/_AutoGenerated/" + HalApplicationBuilder.ReArchTo関数型.CodeRendering.AspNetMvc.JsTemplate.FILE_NAME)" />
</body>
</html>
